<div class="content-wrapper" style="margin-left: 40px; padding: 20px;"> <!-- Adjust margin-left to match your sidebar width -->
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Customer</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
      <div class="btn-group me-2">
        <button class="btn btn-sm btn-outline-secondary">?</button>
      </div>
    </div>
  </div>

  <div class="col py-3">
    <div class="row">
      <div class="col">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
            <li class="breadcrumb-item active">New Customer</li>
          </ol>
        </nav>
      </div>
      <div class="col text-end fw-lighter">
        <b>UserId</b>
      </div>
    </div>
  </div>

  <!-- Customer Form -->
  <form action="/add" method="POST">

    <!-- S.No Field -->
    <div class="row form-group mb-4">
      <div class="col">
        <label for="sno">S.No</label>
        <input type="text" class="form-control" id="sno" name="sno" placeholder="Serial Number" required>
      </div>
    </div>

    <!-- URL of User -->
    <div class="row form-group mb-4">
      <div class="col">
        <label for="url">URL of User</label>
        <input type="text" class="form-control" id="url" name="url" placeholder="User URL" required>
      </div>
    </div>

    <!-- User Name -->
    <div class="row form-group mb-4">
      <div class="col">
        <label for="name">User Name</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="User Name" required>
      </div>
    </div>

    <!-- User Address -->
    <div class="row form-group mb-4">
      <div class="col">
        <label for="address">User Address</label>
        <input type="text" class="form-control" id="address" name="address" placeholder="User Address" required>
      </div>
    </div>

    <!-- User Contact Primary (Billing) -->
    <div class="row form-group mb-4">
      <div class="col">
        <label for="contactPrimary">User Contact Primary (Billing)</label>
        <input type="text" class="form-control" id="contactPrimary" name="contactPrimary" placeholder="Primary Contact" required>
      </div>
    </div>

    <!-- User Contact Technical -->
    <div class="row form-group mb-4">
      <div class="col">
        <label for="contactTechnical">User Contact Technical</label>
        <input type="text" class="form-control" id="contactTechnical" name="contactTechnical" placeholder="Technical Contact" required>
      </div>
    </div>

    <!-- Submit Button -->
    <div class="form-group mb-4">
      <button type="submit" class="btn btn-primary">Add Customer</button>
    </div>

  </form>
</div>
