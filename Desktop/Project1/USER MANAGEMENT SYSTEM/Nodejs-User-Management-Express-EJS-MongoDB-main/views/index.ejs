<div class="content-wrapper">
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Dashboard</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
      <div class="btn-group me-2">
        <a href="/add" class="btn btn-sm btn-outline-secondary">+ New User</a>
      </div>
      <div class="btn-group me-2">
        <a href="/export" class="btn btn-sm btn-outline-secondary">Export Data</a>
      </div>
    </div>
  </div>

  <% messages.forEach(element => { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= element %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% }) %>

  <div class="table-responsive">
    <table class="table table-striped table-sm">
      <thead>
        <tr>
          <th scope="col">First Name</th>
          <th scope="col">Last Name</th>
          <th scope="col">Email</th>
          <th scope="col" class="text-end">Action</th>
        </tr>
      </thead>
      <tbody>
        <% customers.forEach(element => { %>
          <tr class="align-middle">
            <td><%= element.firstName %></td>
            <td><%= element.lastName %></td>
            <td><%= element.email %></td>
            <td class="text-end">
              <div class="d-flex flex-row justify-content-end gap-2">
                <a href="/view/<%= element._id %>" class="btn btn-primary btn-sm" aria-label="View <%= element.firstName %> <%= element.lastName %>">
                  <i class="bi bi-eye"></i>
                </a>
                <a href="/edit/<%= element._id %>" class="btn btn-warning btn-sm" aria-label="Edit <%= element.firstName %> <%= element.lastName %>">
                  <i class="bi bi-pencil"></i>
                </a>
                <form action="/edit/<%= element._id %>?_method=DELETE" method="POST" class="position-relative">
                  <button type="submit" class="btn btn-danger btn-sm" aria-label="Delete <%= element.firstName %> <%= element.lastName %>">
                    <i class="bi bi-person-x"></i>
                  </button>
                </form>
              </div>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <% if (customers.length > 0) { %>
    <nav aria-label="Dashboard Pagination">
      <ul class="pagination justify-content-center mt-5">
        <li class="page-item <%= current == 1 ? 'disabled' : '' %>">
          <a href="<%= current == 1 ? '#' : '/?page=1' %>" class="page-link">First</a>
        </li>
        <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
        <% if(i !== 1) { %>
          <li class="page-item disabled"><a href="#" class="page-link">...</a></li>
        <% } %>
        <% for(; i <= (Number(current) + 4) && i <= pages; i++ ) { %>
          <li class="page-item <%= i == current ? 'disabled' : '' %>">
            <a href="<%= i == current ? '#' : '/?page=' + i %>" class="page-link"><%= i %></a>
          </li>
          <% if (i == Number(current) + 4 && i < pages) { %>
            <li class="page-item disabled"><a href="#" class="page-link">...</a></li>
          <% } %>
        <% } %>
        <li class="page-item <%= current == pages ? 'disabled' : '' %>">
          <a href="<%= current == pages ? '#' : '/?page=' + pages %>" class="page-link">Last</a>
        </li>
      </ul>
    </nav>
  <% } %>
</div>

<style>
.content-wrapper {
  margin-left: 35px; /* Increased space from the sidebar */
  padding: 20px; /* Keep padding around the content */
}

.table-responsive {
  margin-top: 20px; /* Space above the table */
}

.btn-toolbar {
  margin-bottom: 20px; /* Space below the button toolbar */
}

.alert {
  margin-bottom: 20px; /* Space below alerts */
}
</style>
